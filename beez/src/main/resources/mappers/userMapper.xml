<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sinc.beez.mapper.user">
	
	<select id="teamlist" parameterType="user" resultType="user">
		SELECT  USER_ID, USER_NAME
		FROM    USER_TB
		WHERE   DEPT_ID = 
					   (SELECT  DEPT_ID
						FROM    USER_TB
						WHERE   USER_ID = #{user_id})
		AND		USER_ID != #{user_id}
	</select>

	<select id="userbyname" parameterType="user" resultType="user">
		SELECT  USER_NAME, USER_ID
		FROM    USER_TB
		WHERE   USER_NAME = #{user_name}
	</select>
	
	<select id="userbyid" parameterType="user" resultType="user">
		
		SELECT  USER_ID, USER_NAME, DEPT_NAME
		FROM    USER_TB U
		JOIN    DEPT_TB D   ON(U.DEPT_ID = D.DEPT_ID)
		WHERE   USER_ID = #{user_id}
	</select>
	
	<insert id="insertstate" parameterType="java.util.Map">
		INSERT 	INTO USER_STATE_TB
		VALUES	(#{user_id}, #{user_state})
	</insert>
	
	<select id="selectstate" parameterType="java.util.Map" resultType="java.util.Map">
		SELECT	*
		FROM 	USER_STATE_TB
		WHERE	USER_ID = #{user_id}
	</select>
	
	<update id="updatestate" parameterType="java.util.Map">
		UPDATE	USER_STATE_TB
		SET 	USER_STATE = #{user_state}
		WHERE	USER_ID = #{user_id}
	</update>
	
